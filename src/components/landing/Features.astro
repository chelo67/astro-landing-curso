---
import features from '../../config/features.json'
---

<h1 class="text-center font-bold text-5xl mt-10">Features</h1>

<div class="grid grid-cols-3 gap-4 p-4 mt-10 bg-zinc-900">

    {
        features.map((feature) => (
            <div class="p-10 round-xl">
                <h2 class="text-2xl font-bold">{feature.title}</h2>
                <p>{feature.description}</p>
            </div>
        ))
    }

</div>